{
  "name": "forum-api-ts",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc -b tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "type-check": "tsc --noEmit --skipLibCheck",
    "start": "node -r dist/main.js",
    "start:dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node -r tsconfig-paths/register' src/main.ts",
    "test": "jest -i",
    "test:coverage": "jest --coverage -i",
    "test:watch": "jest --watch --coverage -i",
    "test:watch:all": "jest --watchAll -i",
    "test:unit": "ts-node ./node_modules/jest/bin/jest --config ./jest.unit.config.ts",
    "test:integration": "ts-node ./node_modules/jest/bin/jest --config ./jest.integration.config.ts -i",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "migrate": "ts-node ./node_modules/node-pg-migrate/bin/node-pg-migrate -j ts -f ./pg-migrate.config.ts",
    "migrate:test": "ts-node ./node_modules/node-pg-migrate/bin/node-pg-migrate -j ts -f ./pg-migrate.config.ts --envPath .env.test"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-list-routes": "^1.3.2",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^3.3.11",
    "node-pg-migrate": "^8.0.4",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.6.2",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0"
  }
}
